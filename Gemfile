  gem 'rubocop'
end

group :jekyll_plugins do
  gem 'jekyll-commonmark'
  gem 'jekyll-feed'
  gem 'jekyll-remote-theme'
  gem 'jekyll-seo-tag'
  gem 'jekyll-sitemap'
end
